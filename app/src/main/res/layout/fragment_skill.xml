<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topBar3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start|center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Go back to createCv page"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/tool_bar_title_create_cv"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/experience_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="@string/skills_form_txt"
        android:textColor="@color/dark_blue"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/skill_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/skills_input_edit_text"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/background_form_stroke"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/skill_01"
                android:inputType="text|textShortMessage"
                android:padding="15dp"
                android:textAlignment="textStart"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/skill_form_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/skill_form">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/skills_input_edit_text2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/background_form_stroke"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/skill_02"
                android:inputType="text|textShortMessage"
                android:padding="15dp"
                android:textAlignment="textStart"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/skill_form_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/skill_form_2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/skills_input_edit_text3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/background_form_stroke"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/skill_03"
                android:inputType="text|textShortMessage"
                android:padding="15dp"
                android:textAlignment="textStart"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/skill_form_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/skill_form_3">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/skills_input_edit_text4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/background_form_stroke"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/skill_04"
                android:inputType="text|textShortMessage"
                android:padding="15dp"
                android:textAlignment="textStart"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/save_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/backgorund_button"
            android:elegantTextHeight="true"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/save_button_txt"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>