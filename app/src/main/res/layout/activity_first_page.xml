<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <TextView
            android:id="@+id/hello_wellcome_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:paddingTop="25dp"
            android:paddingRight="20dp"
            android:text="@string/splash_screen_01"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            tools:ignore="RtlCompat" />

        <ImageView
            android:id="@+id/first_page_image"
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:layout_margin="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/group_2"
            android:contentDescription="@string/first_page_image" />

        <ImageView
            android:id="@+id/first_ellips"
            android:layout_below="@id/first_page_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/__ellips" />

        <Button
            android:id="@+id/continue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/backgorund_button"
            android:backgroundTint="@color/dark_blue"
            android:drawableTint="@color/dark_blue"
            android:elegantTextHeight="true"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/continue_button_txt"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white" />


</LinearLayout>