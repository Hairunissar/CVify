<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/hello_wellcome_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center|left"
        android:paddingLeft="20dp"
        android:paddingTop="60dp"
        android:paddingRight="20dp"
        android:text="@string/splash_screen_01"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="32sp"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:layout_margin="30dp"
        app:srcCompat="@drawable/ic_splash_screen_1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/__ellips" />

    <Button
        android:id="@+id/bagikan_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="38dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/backgorund_button"
        android:elegantTextHeight="true"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/continue_button_txt"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white" />


</LinearLayout>